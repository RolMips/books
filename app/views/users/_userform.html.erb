<% if @user.persisted? %>
  <%= form_for @user do %>
    <p>
      <label for="user_name">Nom utilisateur :</label>
      <input type="text" id="user_name" name="user_name" value=<%= @user.name_was %>> <font color="red"><%= @user.errors[:name].first %></font>
    </p>
    <p>
      <label for="user_pw">Mot de passe (3 car. min) :</label>
      <input type="password" id="user_password" name="user_password" minlength="3" value=<%= @user.password_was %> required> <font color="red"><%= @user.errors[:password].first %></font>
    </p>
    <p>
      <label for="user_role">Role :</label>
      <select name="user_role" id="user_role">
        <% if @user.role_was == "User" %>
          <option value="User" selected>User</option>
        <%else %>
          <option value="User">User</option>
        <% end %>
        <% if @user.role_was == "Admin" %>
          <option value="Admin" selected>Admin</option>
        <%else %>
          <option value="Admin">Admin</option>
        <% end %>
      </select>
    </p>
    <input type="submit" value="Modifier l'utilisateur" /><br>
  <% end %>
<% else %>
  <%= form_for @user do %>
    <p>
      <label for="user_name">Nom utilisateur :</label>
      <input type="text" id="user_name" name="user_name" placeholder="Nom de l'utilisateur"> <font color="red"><%= @user.errors[:name].first %></font>
    </p>
    <p>
      <label for="user_pw">Mot de passe (3 caractÃ¨res minimum):</label>
      <input type="password" id="user_password" name="user_password" placeholder="Mot de passe de l'utilisateur" minlength="3" value=<%= @user.password %> required> <font color="red"><%= @user.errors[:password].first %></font>
    </p>
    <p>
      <label for="user_role">Role :</label>
      <select name="user_role" id="user_role">
        <option value="User" selected>User</option>
        <option value="Admin">Admin</option>
      </select>
    </p>
    <input type="submit" value="Ajouter l'utilisateur" /><br>
    <% end %>
<% end %>
